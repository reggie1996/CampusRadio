<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="fill_parent"
    android:layout_height="117dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="#ffffff"
    >



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1"
                android:layout_weight="0.71">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cover_course4"
                    android:id="@+id/iv_cover"
                    android:paddingLeft="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:text="课程名：黑魔法防御"
                        android:textColor="#1f4e5f"
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_coursename"
                        android:paddingBottom="3dp"/>

                    <TextView
                        android:text="主讲人：邓布利多"
                        android:textColor="#1f4e5f"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hostName"
                        android:paddingBottom="3dp"/>

                    <TextView
                        android:text="简介：一堂有意思的课"
                        android:textSize="12dp"
                        android:paddingBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_describe" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e5e5e5"/>

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_live"
            android:paddingTop="7dp"
            android:id="@+id/iv_livestatus"/>

    </FrameLayout>


</android.support.v7.widget.CardView >