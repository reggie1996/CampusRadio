<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <com.freegeek.android.materialbanner.MaterialBanner
                android:id="@+id/material_banner_mainthree"
                android:layout_width="match_parent"
                app:match="true"
                android:layout_height="170dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">
            </com.freegeek.android.materialbanner.MaterialBanner>

            <com.taobao.library.VerticalBannerView
                android:id="@+id/banner_01"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:animDuration="900"
                app:gap="2000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#d5dada"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#59ffffff">

                <View
                    android:layout_width="8dp"
                    android:layout_height="35dp"
                    android:background="#1f4e5f"
                    android:layout_weight="0.20" />

                <TextView
                    android:text="课程直播"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textColor="#1f4e5f"
                    android:textSize="17dp"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d5dada"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <com.example.a24073.campusradio.utils.MyListView
                android:id="@+id/lv_livecourse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"/>

            <TextView
                android:text="更多>>>"
                android:textSize="13dp"
                android:textColor="#1f4e5f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d5dada"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#59ffffff">

                <View
                    android:layout_width="8dp"
                    android:layout_height="35dp"
                    android:background="#1f4e5f"
                    android:layout_weight="0.20" />

                <TextView
                    android:text="课程预告"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textColor="#1f4e5f"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d5dada"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <com.example.a24073.campusradio.utils.MyListView
                android:id="@+id/lv_precourse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"/>

            <TextView
                android:text="更多>>>"
                android:textSize="13dp"
                android:textColor="#1f4e5f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="20dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d5dada"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#59ffffff">

                <View
                    android:layout_width="8dp"
                    android:layout_height="35dp"
                    android:background="#1f4e5f"
                    android:layout_weight="0.20" />

                <TextView
                    android:text="在线比赛"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textColor="#1f4e5f"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d5dada"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <com.example.a24073.campusradio.utils.MyListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_onlinecompetition"
                android:divider="@null">
            </com.example.a24073.campusradio.utils.MyListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>