<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_me_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a24073.campusradio.controller.activity.MeOrderActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#40E2E8E8">

        <View
            android:layout_width="wrap_content"
            android:layout_height="23dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:gravity="center"
            android:weightSum="1">
            <!--android:background="#00645c"-->


            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_moment_back"
                android:id="@+id/imageView13"
                android:layout_weight="0.01"
                android:onClick="moment_back"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0.54" />

            <TextView
                android:id="@+id/title_in"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#00645c"
                android:textSize="20dp"
                android:text="我的课程"
                android:layout_weight="0.38" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:layout_weight="0.71">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="75dp"
                        android:src="@drawable/cover_course1"
                        android:paddingLeft="5dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:text="课程名：入学专讲"
                            android:textColor="#1f4e5f"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"/>
                        <TextView
                            android:text="主讲人：老布"
                            android:textColor="#1f4e5f"
                            android:textSize="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"/>
                        <TextView
                            android:text="简介：新生必看哦"
                            android:textSize="12dp"
                            android:paddingBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_describe" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e5e5e5"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:layout_weight="0.71">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="75dp"
                        android:src="@drawable/cover_course3"
                        android:paddingLeft="5dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:text="课程名：考研专题课堂"
                            android:textColor="#1f4e5f"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"/>
                        <TextView
                            android:text="主讲人：亚瑟王"
                            android:textColor="#1f4e5f"
                            android:textSize="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"/>
                        <TextView
                            android:text="简介：一起来考研了"
                            android:textSize="12dp"
                            android:paddingBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e5e5e5"/>
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:layout_weight="0.71">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="74dp"
                        android:src="@drawable/cover_course4"
                        android:paddingLeft="5dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:text="课程名：黑魔法防御"
                            android:textColor="#1f4e5f"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"/>
                        <TextView
                            android:text="主讲人：邓布利多"
                            android:textColor="#1f4e5f"
                            android:textSize="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"/>
                        <TextView
                            android:text="简介：一堂有意思的课"
                            android:textSize="12dp"
                            android:paddingBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e5e5e5"/>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>


</FrameLayout>
