<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prediction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a24073.campusradio.controller.activity.PredictionActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:src="@mipmap/predictioncover" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pre"
                android:id="@+id/imageView14" />

            <TextView
                android:text="时间管理速成班"
                android:textColor="#00645c"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:text="# 7月23日至28日 每天晚上18:30     # 已有122人预约\n# 点击预约全部课程"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:text="预约"
            android:id="@+id/iv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_predictionbutton"
            android:padding="10dp"
            android:onClick="pressPredicte"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shu_green"/>

            <TextView
                android:text="课程简介"
                android:textColor="#00645c"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:text="      时间管理的本质是自我管理，时间管理的目标是角色和谐。时间管理的核心目的之一是提升效率，其实最可怕的不是效率不高，而是干脆做错了事。接受现实才能做正确的事情，所谓正确的事情也就是现实的事情。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.31"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shu_green"/>

            <TextView
                android:text="课程目录"
                android:textColor="#00645c"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

<include layout="@layout/layout_courselist"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shu_green"/>

            <TextView
                android:text="交流区"
                android:textColor="#00645c"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:text=" 暂无发言"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.31"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>

</ScrollView>
