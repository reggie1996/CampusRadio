<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_change_nick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
	    android:layout_marginLeft="@dimen/menudialog_text_margin"
    	android:layout_marginRight="@dimen/menudialog_text_margin"
        android:layout_weight="1" >
        <TextView
            style="@style/menuDialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nick_now" />
        <TextView
            style="@style/menuDialogText"
            android:id="@+id/old_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
	    android:layout_marginLeft="@dimen/menudialog_text_margin"
    	android:layout_marginRight="@dimen/menudialog_text_margin"
        android:layout_weight="1" >
        <TextView
            style="@style/menuDialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nick_new" />
        <EditText
            style="@style/menuDialogText"
            android:id="@+id/new_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:ems="8"
            android:inputType="text" >
            <requestFocus />
        </EditText>
    </LinearLayout>
</LinearLayout>